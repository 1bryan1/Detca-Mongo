<div class="row">
    <div class="col-md-3 offset-3 mt-5">
        <form action="/reset/{{token}}"  method="POST">
            <legend>Recuperacion de contraseña</legend>
            <div class="form-group">
                <label for="contraseña_us">Nueva contraseña</label>
                <input type="password" name="contraseña_us" value="" placeholder="Nueva contraseña" autofocus="autofocus"
                    class="form-control">
            </div>
            <div class="form-group">
                <label for="contraseña_us">Confirmar contraseña</label>
                <input type="password" name="confirm_contraseña_us" value="" placeholder="Confirmar contraseña" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Actualizar contraseña</button>
            </div>
        </form>
    </div>
</div>